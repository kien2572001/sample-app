<% provide(:title, t("sessions.new.title")) %>
<h1><%= t("sessions.new.title") %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
      <%= form_with(url: login_path, scope: :session) do |f| %>
        <%= f.label :email , t("sessions.new.email") %>
        <%= f.email_field :email, class: "form-control" %>
        <%= f.label :password , t("sessions.new.password") %>
        <%= f.password_field :password, class: "form-control" %>
        <%= f.label :remember_me, class: "checkbox inline" do %>
          <%= f.check_box :remember_me %>
          <%= t("sessions.new.remember_me_on_this_computer") %>
          <%= f.submit t("sessions.new.login"), class: "btn btn-primary" %>
        <% end %>
      <% end %>
    <p><%= t("sessions.new.new_user") %> <%= link_to t("sessions.new.signup_now"), signup_path %></p>
  </div>
</div>
