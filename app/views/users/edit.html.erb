<% provide(:title, t(".edit_user")) %>
<h1><%= t(".update_profile") %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= content_for :button_text do %>
      <%= t(".save_changes") %>
    <% end %>
    <%= render "form" %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="https://gravatar.com/emails" target="_blank">
        <%= t(".change") %>
      </a>
    </div>
  </div>
</div>
